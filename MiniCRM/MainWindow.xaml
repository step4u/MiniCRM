        <Grid Margin="10,125,155,187">
            <Button x:Name="btn_redial" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,55,0,0" Style="{DynamicResource btnImageStyle1}" Click="btn_redial_Click" IsEnabled="False">
                <Button.Template>
